@model MvcClinic.MVC.Models.ClientBornViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Pacientes</h1>

<p>
    <a asp-action="Create">Novo Paciente</a>
</p>

<form asp-controller="Clients" asp-action="Index" method="get">
    <p>
        <select asp-for="ClienteBorn" asp-items="Model.Borns">
            <option value="">-Selecione-</option>
        </select>
        Nome: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filtrar" />
    </p>
</form>

<table class="table table-responsive-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Clients[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clients[0].CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clients[0].CellPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clients[0].Born)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clients[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clients[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clients[0].MaritalStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Clients)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CPF)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CellPhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Born)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaritalStatus)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Ver</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
